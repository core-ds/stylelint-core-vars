{
    "name": "@alfalab/stylelint-core-vars",
    "version": "2.0.0",
    "description": "core-components css linter",
    "license": "MIT",
    "author": "core-ds contributors",
    "type": "module",
    "exports": "./index.js",
    "scripts": {
        "release": "changeset publish",
        "release:snapshot": "changeset publish --tag snapshot --no-git-tag",
        "test": "cross-env NODE_OPTIONS=\"--experimental-vm-modules --no-warnings\" jest",
        "version-package": "changeset version",
        "version-package:snapshot": "changeset version --snapshot snapshot"
    },
    "simple-git-hooks": {
        "pre-commit": "./node_modules/.bin/lint-staged",
        "commit-msg": "./node_modules/.bin/commitlint --edit $1"
    },
    "commitlint": {
        "extends": "./node_modules/arui-presets-lint/commitlint"
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx,json}": [
            "prettier --write"
        ]
    },
    "prettier": "arui-presets-lint/prettier",
    "resolutions": {
        "@alfalab/stylelint-core-vars": "link:./"
    },
    "dependencies": {
        "@manypkg/get-packages": "^3.1.0",
        "postcss": "^8.5.6"
    },
    "devDependencies": {
        "@alfalab/core-components-vars": "7.0.0",
        "@alfalab/stylelint-core-vars": "*",
        "@changesets/changelog-github": "^0.5.1",
        "@changesets/cli": "^2.29.6",
        "arui-presets-lint": "^7.3.0",
        "cross-env": "^10.0.0",
        "jest": "^30.1.3",
        "jest-preset-stylelint": "^8.0.0",
        "lint-staged": "^15.2.7",
        "prettier": "^3.3.2",
        "simple-git-hooks": "^2.11.1",
        "stylelint": "^16.23.1"
    },
    "peerDependencies": {
        "stylelint": "^16.0.0"
    },
    "packageManager": "yarn@4.5.3",
    "engines": {
        "node": ">=18.12.0"
    }
}
